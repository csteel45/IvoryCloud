<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE opstring SYSTEM "java://org/jini/rio/dtd/rio_opstring.dtd">
<opstring>
    <OperationalString Name="Trading Grid Example">
        <Groups>
            <Group>rio</Group>
        </Groups>

		<Logging>
			<Logger Name="ivorycloud" Level="ALL">
				<Handler ClassName="java.util.logging.ConsoleHandler" Level="ALL"></Handler>
			</Logger>
		</Logging>
		
        <!--
        Declare attributes for the Spring example. The spring bean
        configuration will be loaded as a classpath resource from the
        service's classpath, declared by the JARs of the Implementation class
        -->
        <SpringBean Name="Translator" config="trading-grid.xml">

            <Interfaces>
                <Interface>com.ivorycloud.tradinggrid.Translator</Interface>
                <Resources>
                    <JAR>tradinggrid/lib/tradinggrid-dl.jar</JAR>
                </Resources>
            </Interfaces>

            <ImplementationClass>com.ivorycloud.tradinggrid.service.TranslatorImpl
                <Resources>
                    <JAR>tradinggrid/lib/tradinggrid.jar</JAR>
                </Resources>
            </ImplementationClass>
                        
            <Maintain>22</Maintain>
            <MaxPerMachine>5</MaxPerMachine>
            
            
        </SpringBean>
 
        <SpringBean Name="BillingService" config="trading-grid.xml">

            <Interfaces>
                <Interface>com.ivorycloud.tradinggrid.BillingService</Interface>
                <Resources>
                    <JAR>tradinggrid/lib/tradinggrid-dl.jar</JAR>
                </Resources>
            </Interfaces>

            <ImplementationClass>com.ivorycloud.tradinggrid.service.BillingServiceImpl
                <Resources>
                    <JAR>tradinggrid/lib/tradinggrid.jar</JAR>
                </Resources>
            </ImplementationClass>
                        
            <Maintain>1</Maintain>
        </SpringBean>
 
        <SpringBean Name="EventService" config="trading-grid.xml">

            <Interfaces>
                <Interface>com.ivorycloud.event.EventService</Interface>
                <Resources>
                    <JAR>tradinggrid/lib/tradinggrid-dl.jar</JAR>
                </Resources>
            </Interfaces>

            <ImplementationClass>com.ivorycloud.event.EventServiceImpl
                <Resources>
                    <JAR>tradinggrid/lib/tradinggrid.jar</JAR>
                </Resources>
            </ImplementationClass>
                        
            <Maintain>1</Maintain>
        </SpringBean>
        
    </OperationalString>
</opstring>


